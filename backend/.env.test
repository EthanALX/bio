# Testing environment variables for Visual Bio Backend

# Database Configuration (SQLite for testing)
DATABASE_URL=sqlite:///./test.db

# FastAPI Configuration
ENVIRONMENT=testing
DEBUG=true
API_V1_STR=/api/v1

# Security
SECRET_KEY=test-secret-key-not-for-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Services (mocked in tests)
EXTERNAL_API_URL=http://mock-api:8000
REDIS_URL=redis://mock-redis:6379

# Logging
LOG_LEVEL=DEBUG

# CORS Origins (allow all for testing)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Rate Limiting (disabled for testing)
RATE_LIMIT_ENABLED=false